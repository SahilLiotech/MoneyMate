<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.moneymate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity android:name=".WithdrawActivity"/>
        <activity android:name=".DepositeActivity" />
        <activity android:name=".UpdateAccountActivity" />
        <activity
            android:name=".ChangePasswordActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".DeactivatedAccountsActivity"
            android:parentActivityName=".StaffDashboardActivity" />
        <activity
            android:name=".BankAccountRequestsActivity"
            android:parentActivityName=".StaffDashboardActivity" />
        <activity
            android:name=".ViewActiveAccountsActivity"
            android:parentActivityName=".StaffDashboardActivity" />
        <activity
            android:name=".ChequeBookRequestsActivity"
            android:parentActivityName=".StaffDashboardActivity" />

        <activity
            android:name=".DebitCardRequestsActivity"
            android:parentActivityName=".StaffDashboardActivity" />
        <activity
            android:name=".UserDetailsActivity"
            android:parentActivityName=".StaffDashboardActivity"/>
        <activity
            android:name=".AddStaffActivity"
            android:parentActivityName=".StaffDashboardActivity">
        </activity>
        <activity android:name=".StaffDashboardActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StaffLoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".AccountInfoActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".TransactionActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".AccountBalanceActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".TransferMoneyActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".OpenAccountActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".SignupActivity"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".SignupActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
    </application>

</manifest>