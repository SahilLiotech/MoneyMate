<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateAccountActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Bank Account Update Form"
            android:textColor="@color/blackText"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="serif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/account_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/input_box"
            android:ems="10"
            android:hint="Account No"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:paddingHorizontal='20sp'
            android:paddingVertical="10dp"
            android:textColor='@color/whiteText'
            android:textColorHint="@color/whiteText"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/update_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/input_box"
            android:ems="10"
            android:hint="@string/name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:paddingHorizontal='20sp'
            android:paddingVertical="10dp"
            android:textColor='@color/whiteText'
            android:textColorHint="@color/whiteText"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_no" />

        <TextView
            android:id='@+id/textView3'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart='20sp'
            android:layout_marginTop='16sp'
            android:text='Select Your Gender'
            android:textColor="@color/blackText"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/update_name" />

        <RadioGroup
            android:id="@+id/radio_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart='10sp'
            android:layout_marginTop='6sp'
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/textView3"
            app:layout_constraintTop_toBottomOf="@id/textView3">

            <RadioButton
                android:id="@+id/update_radio_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/blackText"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/update_radio_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="@color/blackText"
                android:textSize="20sp" />
        </RadioGroup>

        <EditText
            android:id="@+id/update_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_box"
            android:ems="10"
            android:hint="Mobile No"
            android:inputType="phone"
            android:paddingHorizontal='20sp'
            android:paddingVertical="10dp"
            android:textColor="@color/whiteText"
            android:textColorHint="@color/whiteText"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/radio_gender"
            app:layout_constraintTop_toBottomOf="@id/radio_gender" />

        <EditText
            android:id="@+id/update_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_box"
            android:ems="10"
            android:hint="@string/Email"
            android:inputType="textEmailAddress"
            android:paddingHorizontal='20sp'
            android:paddingVertical="10dp"
            android:textColor="@color/whiteText"
            android:textColorHint="@color/whiteText"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/update_mobile_no"
            app:layout_constraintTop_toBottomOf="@id/update_mobile_no" />

        <EditText
            android:id="@+id/update_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_box"
            android:ems="10"
            android:hint="Date Of Birth"
            android:inputType="none"
            android:paddingHorizontal='20sp'
            android:paddingVertical="10dp"
            android:textColor="@color/whiteText"
            android:textColorHint="@color/whiteText"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/update_email"
            app:layout_constraintTop_toBottomOf="@id/update_email" />

        <EditText
            android:id="@+id/update_pan_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_box"
            android:ems="10"
            android:hint="Pan Card Number"
            android:inputType="textPersonName"
            android:paddingHorizontal='20sp'
            android:paddingVertical="10dp"
            android:textColor="@color/whiteText"
            android:textColorHint="@color/whiteText"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/update_dob"
            app:layout_constraintTop_toBottomOf="@id/update_dob" />

        <EditText
            android:id="@+id/update_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_box"
            android:ems="10"
            android:hint="Address"
            android:inputType="textMultiLine"
            android:paddingHorizontal='20sp'
            android:paddingVertical="10dp"
            android:textColor="@color/whiteText"
            android:textColorHint="@color/whiteText"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/update_pan_card"
            app:layout_constraintTop_toBottomOf="@id/update_pan_card" />

        <EditText
            android:id="@+id/update_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_box"
            android:ems="10"
            android:hint="State"
            android:inputType="textPersonName"
            android:paddingHorizontal='20sp'
            android:paddingVertical="10dp"
            android:textColor="@color/whiteText"
            android:textColorHint="@color/whiteText"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/update_address"
            app:layout_constraintTop_toBottomOf="@id/update_address" />

        <EditText
            android:id="@+id/update_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_box"
            android:ems="10"
            android:hint="City"
            android:inputType="textPersonName"
            android:paddingHorizontal='20sp'
            android:paddingVertical="10dp"
            android:textColor="@color/whiteText"
            android:textColorHint="@color/whiteText"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/update_state"
            app:layout_constraintTop_toBottomOf="@id/update_state" />

        <EditText
            android:id="@+id/update_zip_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_box"
            android:ems="10"
            android:hint="Zip Code"
            android:inputType="number"
            android:paddingHorizontal='20sp'
            android:paddingVertical="10dp"
            android:textColor="@color/whiteText"
            android:textColorHint="@color/whiteText"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/update_city"
            app:layout_constraintTop_toBottomOf="@id/update_city" />

        <Button
            android:id="@+id/submit_update_account_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="54dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_btn"
            android:text="Submit"
            android:textColor="@color/whiteText"
            app:layout_constraintStart_toStartOf="@id/update_zip_code"
            app:layout_constraintTop_toBottomOf="@id/update_zip_code" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>