<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferMoneyActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/transfermoneyheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="TRANSFER MONEY"
            android:textColor="@color/blackText"
            android:textStyle="bold"
            android:textSize="24sp"
            app:fontFamily="serif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/payer_account_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="number"
            android:hint="Payers's Account Number"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/input_box"
            android:textColorHint="@color/whiteText"
            android:textColor='@color/whiteText'
            android:textSize="20sp"
            android:paddingVertical="10dp"
            android:paddingHorizontal='20sp'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transfermoneyheading"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/recipient_account_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="number"
            android:hint="Recipient's Account Number"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/input_box"
            android:textColorHint="@color/whiteText"
            android:textColor='@color/whiteText'
            android:textSize="20sp"
            android:paddingVertical="10dp"
            android:paddingHorizontal='20sp'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payer_account_no"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/transfer_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="number"
            android:hint="Amount"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/input_box"
            android:textColorHint="@color/whiteText"
            android:textColor='@color/whiteText'
            android:textSize="20sp"
            android:paddingVertical="10dp"
            android:paddingHorizontal='20sp'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipient_account_no"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/submit_transfer_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="64dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_btn"
            android:text="Transfer Money"
            android:textColor="@color/whiteText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/transfer_amount" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>