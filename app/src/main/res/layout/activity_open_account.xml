<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenAccountActivity"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/accountOpenHeading"
        android:textColor="@color/blackText"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/name"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/input_box"
        android:textColorHint="@color/whiteText"
        android:textColor='@color/whiteText'
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:paddingHorizontal='20sp'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:importantForAutofill="no" />

    <TextView
        android:layout_width="wrap_content"
        android:id='@+id/textView3'
        android:layout_height="wrap_content"
        android:text='Select Your Gender'
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop='16sp'
        android:layout_marginStart='20sp'
        android:textSize="20sp"
        android:textColor="@color/blackText"
        app:layout_constraintTop_toBottomOf="@id/name"/>

    <RadioGroup
        android:id="@+id/radio_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart='10sp'
        android:layout_marginTop='6sp'
        app:layout_constraintStart_toStartOf="@id/textView3"
        app:layout_constraintTop_toBottomOf="@id/textView3"
       >
        <RadioButton android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="20sp"
            android:textColor="@color/blackText"/>
        <RadioButton android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="20sp"
            android:textColor="@color/blackText"/>
    </RadioGroup>

    <EditText
        android:id="@+id/mobile_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:background="@drawable/input_box"
        android:hint="Mobile No"
        android:textColorHint="@color/whiteText"
        android:textSize="20sp"
        android:textColor="@color/whiteText"
        android:paddingVertical="10dp"
        android:paddingHorizontal='20sp'
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/radio_gender"
        app:layout_constraintTop_toBottomOf="@id/radio_gender" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/input_box"
        android:inputType="textEmailAddress"
        android:hint="@string/Email"
        android:textColor="@color/whiteText"
        android:textColorHint="@color/whiteText"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:paddingHorizontal='20sp'
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/mobile_no"
        app:layout_constraintStart_toStartOf="@id/mobile_no"/>

    <EditText
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:background="@drawable/input_box"
        android:hint="Date Of Birth"
        android:textColor="@color/whiteText"
        android:textColorHint="@color/whiteText"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:paddingHorizontal='20sp'
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="@id/email"/>

    <EditText
        android:id="@+id/pan_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/input_box"
        android:hint="Pan Card Number"
        android:textColor="@color/whiteText"
        android:textColorHint="@color/whiteText"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:paddingHorizontal='20sp'
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/dob"
        app:layout_constraintStart_toStartOf="@id/dob"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:background="@drawable/input_box"
        android:hint="Address"
        android:textColor="@color/whiteText"
        android:textColorHint="@color/whiteText"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:paddingHorizontal='20sp'
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/pan_card"
        app:layout_constraintStart_toStartOf="@id/pan_card"/>

    <EditText
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/input_box"
        android:hint="State"
        android:textColor="@color/whiteText"
        android:textColorHint="@color/whiteText"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:paddingHorizontal='20sp'
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintStart_toStartOf="@id/address"/>

    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/input_box"
        android:hint="City"
        android:textColor="@color/whiteText"
        android:textColorHint="@color/whiteText"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:paddingHorizontal='20sp'
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/state"
        app:layout_constraintStart_toStartOf="@id/state"/>

    <EditText
        android:id="@+id/zip_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/input_box"
        android:hint="Zip Code"
        android:textColor="@color/whiteText"
        android:textColorHint="@color/whiteText"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:paddingHorizontal='20sp'
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/city"
        app:layout_constraintStart_toStartOf="@id/city"/>

    <Spinner
        android:id="@+id/account_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_box"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal='20sp'
        android:textColor="@color/whiteText"
        android:textSize="20sp"
        android:spinnerMode='dialog'
        app:layout_constraintStart_toStartOf="@id/zip_code"
        android:prompt='@string/account_type'
        app:layout_constraintTop_toBottomOf="@id/zip_code"/>

    <Button
        android:id="@+id/submit_account_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/whiteText"
        android:layout_marginHorizontal="54dp"
        android:background="@drawable/rounded_btn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/account_type"
        app:layout_constraintStart_toStartOf="@id/account_type"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>